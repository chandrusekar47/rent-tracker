<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout android:layout_width="fill_parent" android:layout_height="50dp" android:orientation="horizontal">

        <EditText
            android:id="@+id/searchInput"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="fill_parent"
            android:hint="@string/search_hint"
            android:inputType="text" />

        <ImageButton
            android:id="@+id/searchButton"
            android:src="@drawable/search_icon"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>

    </LinearLayout>
    <ListView android:id="@+id/resultsHolder" android:layout_height="fill_parent" android:layout_width="fill_parent">
    </ListView>
</LinearLayout>